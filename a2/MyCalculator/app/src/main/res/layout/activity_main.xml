<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0d0701"
    tools:context="com.mriu.mycalculator.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="50sp"
        android:textAlignment="center"
        android:background="#fdde10"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="+"
        android:background="#fdde10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fdde10"
        android:id="@+id/button3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fdde10"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:id="@+id/button6" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fdde10"
        android:layout_alignTop="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:id="@+id/button7" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button8"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/button9" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button9"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:id="@+id/button10" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button11"
        android:background="@android:color/holo_orange_light"
        android:layout_alignStart="@+id/button9"
        android:id="@+id/button12" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/button12"
        android:layout_alignStart="@+id/button10"
        android:id="@+id/button13" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button11"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/button14" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/button14"
        android:layout_alignEnd="@+id/button12"
        android:id="@+id/button15" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/button15"
        android:layout_alignStart="@+id/button13"
        android:id="@+id/button16" />

    <Button
        android:text="AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button14"
        android:background="@android:color/holo_green_light"
        android:layout_alignEnd="@+id/button14"
        android:layout_marginTop="18dp"
        android:id="@+id/button17" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:layout_alignTop="@+id/button18"
        android:layout_alignEnd="@+id/button16"
        android:id="@+id/button19" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_marginTop="16dp"
        android:id="@+id/button11"
        android:layout_below="@+id/button8"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/button18"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignStart="@+id/button15" />

</RelativeLayout>
